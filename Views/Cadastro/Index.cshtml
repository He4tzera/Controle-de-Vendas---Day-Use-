@model DayuseModel

@{
    ViewData["Title"] = "Cadastro de Day Use";
}

<form method="post" asp-controller="Cadastro" asp-action="Index">

    <div class="text-center">
        <h1 class="display-4 mb-5 my-4">Cadastro de Venda</h1>

        @if (TempData["Mensagem de Sucesso"] != null)
        {
            <div class="alert alert-dismissible alert-success" role="alert">
                @TempData["Mensagem de Sucesso"]
            </div>
        }

        @if (TempData["Mensagem de Erro"] != null)
        {
            <div class="alert alert-dismissible alert-danger" role="alert">
                @TempData["Mensagem de Erro"]
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input class="form-control" type="text" asp-for="Nome" placeholder="Nome Completo">
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
            <div class="col-md-6 mb-3">
                <input class="form-control" type="tel" asp-for="Telefone" pattern="[(][0-9]{2}[)][0-9]{5}-[0-9]{4}" placeholder="(11)99999-9999">
                <span class="text-danger" asp-validation-for="Telefone"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input class="form-control" type="text" asp-for="Pulseira" placeholder="Numero da Pulseira">
                <span class="text-danger" asp-validation-for="Pulseira"></span>
            </div>
            <div class="col-md-6 mb-3">
                <input class="form-control" asp-for="DataVenda" type="date" placeholder="Data">
                <span class="text-danger" asp-validation-for="DataVenda"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 mb-3">
                <select class="form-control" asp-for="Aluno" id="Aluno">
                    <option value=true>Aluno</option>
                    <option value=false>Não Aluno</option>
                </select>
                <span class="text-danger" asp-validation-for="Aluno"></span>
            </div>
            <div class="col-md-4 mb-3">
                <div class="input-group gap-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">R$</span>
                    </div>
                    <input type="text" class="form-control" asp-for="Preco" placeholder="Preço">
                </div>
                <span class="text-danger" asp-validation-for="Preco"></span>
            </div>
            <div class="col-md-4 mb-3">
                <select class="form-control" asp-for="FormaPagamento" id="FormaPagamento">
                    <option value=Debito>Debito</option>
                    <option value=Credito>Credito</option>
                    <option value="Pix">Pix</option>
                    <option value="TP">TP</option>
                    <option value="GP">GP</option>
                </select>
                <span class="text-danger" asp-validation-for="FormaPagamento"></span>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center mt-4 gap-2">
            <a type="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </div>
    </div>
</form>
